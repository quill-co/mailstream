{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES6",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "jest"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests", "**/*.spec.ts", "**/*.test.ts"]
}
